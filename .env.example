# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_db_name

# App
PORT=3000
NODE_ENV=development

# JWT
JWT_ACCESS_SECRET=your_jwt_access_secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_ACCESS_REFRESH_THRESHOLD_SECONDS=60
JWT_ACCESS_EXPIRES_IN=7d
JWT_REFRESH_DAYS=7
JWT_REFRESH_ROTATE_WINDOW_SECONDS=86400

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_email_app_password
MAIL_FROM=TripMaster <noreply@tripmaster.com>

# Frontend URL
FRONTEND_URL=http://localhost:3001

# External APIs
GOONG_API_KEY=your_goong_api_key
GEOAPIFY_API_KEY=your_geoapify_api_key
OPENWEATHER_API_KEY=your_openweather_api_key

# Currency Exchange APIs
EXCHANGERATE_API_KEY=your_exchangerate_api_key
FIXER_API_KEY=your_fixer_api_key

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Rate Limiting
API_RATE_LIMIT_TTL=3600
API_RATE_LIMIT_REQUESTS=1000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=openai/gpt-4.1
OPENAI_API_ENDPOINT=https://models.github.ai/inference
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# AI Rate Limiting
AI_RATE_LIMIT_DAILY=100
AI_RATE_LIMIT_HOURLY=10

# OAuth Encryption Key
OAUTH_ENCRYPTION_KEY=your_oauth_encryption_key

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/facebook/callback

# OpenAI Optimization
OPENAI_GPT4_MODEL=gpt-4o
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60000
OPENAI_API_ENDPOINT=https://api.openai.com/v1
OPENAI_ENABLE_STREAMING=true
OPENAI_AUTO_MODEL_SELECTION=true
OPENAI_REQUESTS_PER_MINUTE=60
OPENAI_TOKENS_PER_MINUTE=150000
OPENAI_MAX_TOKENS_PER_REQUEST=4000
OPENAI_COST_THRESHOLD_WARNING=10.00

# Google Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key
GOOGLE_PLACES_TTL=900

# Amadeus API
ACCESS_TOKEN=your_amadeus_access_token
AMADEUS_API_KEY=your_amadeus_api_key
AMADEUS_API_SECRET=your_amadeus_api_secret
AMADEUS_HOSTNAME=test
