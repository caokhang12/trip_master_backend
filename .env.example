# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=khang
DATABASE_PASSWORD=caokhang12
DATABASE_NAME=trip_master_db

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (for email verification - will be implemented later)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

# App
PORT=3000
NODE_ENV=development

# External APIs for Location Services
# Goong Maps API (Primary for Vietnam locations)
GOONG_API_KEY=your-goong-api-key-here
GOONG_API_BASE_URL=https://rsapi.goong.io

# Nominatim API (OpenStreetMap - Free for international locations)
NOMINATIM_API_BASE_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=TripMaster/1.0
NOMINATIM_EMAIL=your-contact-email@example.com

# Geoapify API (POI search worldwide)
GEOAPIFY_API_KEY=your-geoapify-api-key-here

# OpenWeatherMap API (Weather data)
OPENWEATHER_API_KEY=your-openweather-api-key-here

# Currency Exchange APIs (Multiple providers for redundancy)
# ExchangeRate-API (Primary - 1500 requests/month free)
EXCHANGERATE_API_KEY=your-exchangerate-api-key-here

# Fixer.io (Fallback - 100 requests/month free)
FIXER_API_KEY=your-fixer-api-key-here

# ExchangeRatesAPI (Fallback - open source, no key required)
# No API key needed

# Redis Configuration (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Rate Limiting and Throttling
API_RATE_LIMIT_TTL=3600
API_RATE_LIMIT_REQUESTS=1000

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_SEARCH_RESULTS=3600
CACHE_TTL_API_RESPONSES=1800
CACHE_MAX_ITEMS=10000

# Smart Search Configuration
SMART_SEARCH_DEFAULT_LIMIT=10
SMART_SEARCH_MAX_LIMIT=50
SMART_SEARCH_MIN_QUERY_LENGTH=2

# Cloudinary Configuration (File Upload Service)
# Sign up at https://cloudinary.com for free tier (25GB storage, 25GB bandwidth)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_FILES_PER_UPLOAD=10
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp,avif

# OpenAI Configuration (AI-powered travel planning)
# Sign up at https://platform.openai.com for API access
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_ENDPOINT=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-4.1
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# AI Rate Limiting (to control costs)
AI_RATE_LIMIT_DAILY=100
AI_RATE_LIMIT_HOURLY=10
